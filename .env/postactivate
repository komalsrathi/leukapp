export LEUKDC_USER="medinaj"
export LEUKDC_PASSWORD=""
export LEUKDC_SSHKEY=$HOME"/.ssh/id_rsa.pub"

# leukapp directory
cd ~/Documents/msk/projects/leukapp_project
