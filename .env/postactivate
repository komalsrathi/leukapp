#!/bin/bash
# This hook is run after this virtualenv is activated.

# deploy
export PROJECT_DIR=/Users/medinaj/Documents/msk/projects/leukapp_project

# django
export DEPLOYMENT="local"
export DJANGO_SETTINGS_MODULE="config.settings."$DEPLOYMENT
export DATABASE_TEST_URL=postgres:///leukapp_test
export DATABASE_URL=postgres:///leukapp

# leukapp
export LEUKDC_PROJECTS_DIR="/ifs/res/papaemme/leukgen/"$DEPLOYMENT"/projects"
